{
  "name": "reference-server",
  "version": "0.0.1",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "dev-server": "nodemon src/server.js",
    "test-server": "nodemon src/server.js --test",
    "server": "node src/server.js",
    "test": "jest --runInBand",
    "db": "docker-compose -f docker-compose_postgres.yml up -d",
    "pgadmin": "node pgadmin-setup.js && docker-compose -f docker-compose_pgadmin.yml up",
    "create-tables": "node src/db/create_tables.js",
    "insert-defaults": "node src/db/insert_defaults.js",
    "import-odh-data": "node src/db/import/index.js",
    "test-db": "npm-run-all -s -c test-db:create test-db:start test-db:create-tables test-db:insert-defaults test-db:insert-test-data",
    "test-db:create": "if docker container inspect postgis-test-db  > /dev/null 2>&1 ; then echo 'Container already exists' ; else docker create --name postgis-test-db -p 5432:5432 -e POSTGRES_PASSWORD=mysecretpassword postgis/postgis ; fi",
    "test-db:start": "docker start postgis-test-db",
    "test-db:stop": "docker stop postgis-test-db",
    "test-db:create-tables": "node src/db/create_tables.js --test",
    "test-db:insert-defaults": "node src/db/insert_defaults.js --test",
    "test-db:insert-test-data": "node test/data/insert_test_data.js --test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noi-techpark/odh-alpinebits-destination-data-server.git"
  },
  "author": "Tiago Prince Sales <t.princesales@utwente.nl>",
  "contributors": [
    "Tiago Prince Sales <t.princesales@utwente.nl>",
    "Claudenir M. Fonseca <c.moraisfonseca@utwente.nl>"
  ],
  "bugs": {
    "url": "https://github.com/noi-techpark/odh-alpinebits-destination-data-server/issues"
  },
  "homepage": "https://github.com/noi-techpark/odh-alpinebits-destination-data-server#readme",
  "dependencies": {
    "ajv": "^6.10.2",
    "axios": "^0.24.0",
    "cors": "^2.8.5",
    "custom-env": "^1.0.2",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "iso-639-3": "^2.2.0",
    "jsonapi-serializer": "^3.6.5",
    "knex": "^0.20.8",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "object-path": "^0.11.8",
    "objection": "^2.1.3",
    "pg": "^8.0.3",
    "sanitize-html": "^1.20.1",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^29.0.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5"
  },
  "_moduleAliases": {
    "@src": "src",
    "@destinationdata": "src/model/destinationdata"
  }
}
